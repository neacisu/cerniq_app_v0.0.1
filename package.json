{
  "name": "cerniq-app",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Cerniq.app - B2B Sales Automation Platform",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=json --reporter=verbose --outputFile=test-results/results.json",
    "validate": "pnpm lint && pnpm typecheck && pnpm test",
    "build": "echo 'Build placeholder - F0.6 pending'",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18",
    "yaml": "^2.8.2"
  },
  "engines": {
    "node": ">=25",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.28.2"
}
