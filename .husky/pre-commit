#!/bin/sh
# Pre-commit hook: lint + typecheck + test

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for changed files
echo "ğŸ“‹ Linting staged files..."
pnpm exec lint-staged

# Run typecheck
echo "ğŸ“ Type checking..."
pnpm typecheck
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed. Please fix errors before committing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
pnpm test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix before committing."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
